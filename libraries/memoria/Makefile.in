#
# Global configuration.
#

prefix = @prefix@
srcdir = @srcdir@
top_srcdir = @top_srcdir@
RM = @RMPROG@
INSTALL = @INSTALL@
MKDIR = mkdir
@SET_MAKE@

SUBMAKE = ${MAKE} --no-print-directory

CC = @CC@
CFLAGS = @CFLAGS@
LFLAGS = @LFLAGS@

COMPILE = ${CC} ${CFLAGS} -Iinclude -I../ons/include -c
LIBNAME = memoria
LIB_DEP = ${top_srcdir}/ons/libons.so
LIBS = -L${top_srcdir}/ons -lons

INC_PATH = ${srcdir}/include/${LIBNAME}
SRC_PATH = ${srcdir}/src


#
# Source and header files.
#

SRC = \
	${SRC_PATH}/memoria.c \
	${SRC_PATH}/heap.c \
	${SRC_PATH}/hash.c \
	${SRC_PATH}/random.c

HEADERS = \
	${INC_PATH}/misc.h \
	${INC_PATH}/memoria.h \
	${INC_PATH}/mem.h \
	${INC_PATH}/string.h \
	${INC_PATH}/array.h \
	${INC_PATH}/llist.h \
	${INC_PATH}/heap.h \
	${INC_PATH}/hash.h \
	${INC_PATH}/random.h

BINFILE = lib${LIBNAME}.so
BINARY = ${srcdir}/${BINFILE}

OBJS = ${SRC:%.c=%.o}


#
# Global rules.
#

all: build

.PHONY: all build clean distclean install uninstall


#
# Build routines.
#

build: ${BINARY}

${BINARY}: ${OBJS}
	${CC} ${OBJS} ${LFLAGS} -o ${BINARY} ${LIBS}


#
# Clean routines.
#

clean:
	@${RM} -vf ${SRC_PATH}/*.o ${BINARY}

distclean: clean
	@${RM} -vf ${srcdir}/Makefile


#
# Install routines.
#

install: build
	@test -d ${prefix} || mkdir -vp ${prefix}
	@${INSTALL} -m 755 -vd ${prefix}/include/${LIBNAME}
	@${INSTALL} -m 644 -v ${HEADERS} ${prefix}/include/${LIBNAME}/
	@${INSTALL} -m 755 -v ${BINARY} ${prefix}/lib/

uninstall:
	@${RM} -vRf ${prefix}/include/${LIBNAME} ${prefix}/lib/${BINFILE}


#
# Source file dependencies.
#

${SRC_PATH}/memoria.o: ${SRC_PATH}/memoria.c ${HEADERS} ${LIB_DEP}
	${COMPILE} $< -o $@
${SRC_PATH}/heap.o: ${SRC_PATH}/heap.c ${HEADERS} ${LIB_DEP}
	${COMPILE} $< -o $@
${SRC_PATH}/hash.o: ${SRC_PATH}/hash.c ${HEADERS} ${LIB_DEP}
	${COMPILE} $< -o $@
${SRC_PATH}/random.o: ${SRC_PATH}/random.c ${HEADERS} ${LIB_DEP}
	${COMPILE} $< -o $@

